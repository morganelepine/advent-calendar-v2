{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "declarations.d.ts",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "**/.eslintrc.js",
        "**/babel.config.js",
        "**/jest.setup.js"
    ]
}
